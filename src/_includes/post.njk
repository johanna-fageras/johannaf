---
layout: base
---
<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        {% if subtitle %}
        <h2>{{ subtitle }}</h2>
        {% endif %}
        
        {% if featuredImage %}
        <div class="featured-image">
            <img src="{{ featuredImage }}" alt="{{ featuredImageAlt or title }}">
        </div>
        {% endif %}
        
        <div class="post-meta">
            <time datetime="{{ page.date | dateToISO }}">{{ page.date | dateFilter }}</time>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                    {% if tag != "post" %}
                    <a href="/tags/{{ tag | slug }}/" class="tag">{{ tag }}</a>
                    {% endif %}
                {% endfor %}
            </div>
            {% endif %}
            {% if readingTime %}
            <span class="reading-time">{{ readingTime }} min read</span>
            {% endif %}
        </div>
    </header>

    <div class="post-content">
        {% if lead %}
        <div class="lead">
            {{ lead | safe }}
        </div>
        {% endif %}

        <div class="post-body">
            {{ content | safe }}
        </div>
    </div>

    <footer class="post-footer">
        <div class="author">
            <img src="/assets/images/profile-2.png" alt="Author" class="author-image">
            <div class="author-bio">
                <span class="author-name">Written by {{ site.name }}</span>
                <p class="author-description">{{ site.shortBio }}</p>
            </div>
        </div>
    </footer>
</article>